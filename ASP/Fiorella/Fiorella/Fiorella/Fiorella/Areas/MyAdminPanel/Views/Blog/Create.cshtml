@model Blogger

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Create Blogger</h4>
            <form class="forms-sample" method="post">
              <div class="form-group">
                <label asp-for="BloggerTitle">Title</label>
                <input class="form-control" placeholder="Title" asp-for="BloggerTitle">
                <span asp-validation-for="BloggerTitle" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="BloggerSubTitle">Subtitle</label>
                <input class="form-control" placeholder="Subtitle" asp-for="BloggerSubTitle">
                <span asp-validation-for="BloggerSubTitle" class="text-danger"></span>
              </div>
              <button type="submit" class="btn btn-primary mr-2">Submit</button>
              <a class="btn btn-light" asp-controller="DashBoard" asp-action="Index">Cancel</a>
            </form>
          </div>
        </div>
      </div>
</div>
