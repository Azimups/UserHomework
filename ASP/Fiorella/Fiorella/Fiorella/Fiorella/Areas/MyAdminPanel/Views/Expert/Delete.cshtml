@model Expert

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4 py-3 border-left-primary">
            <div class="card-body">
                <img src="~/img/@Model.Image" class="img-fluid" alt="">
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card mb-4 py-3 border-left-primary">
            <div class="card-body">
                @Model.Job
            </div>
            <div class="card-body">
                <p class="text-danger">are you sure to delete</p>
                <form method="post" class="forms-sample">
                        <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a class="btn btn-light" asp-controller="Expert" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</div>

